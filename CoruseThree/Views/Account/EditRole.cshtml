@model CoruseThree.Models.ViewModel.EditViewRoleModel

@{
    ViewData["Title"] = "EditRole";
}

<h1>EditRole</h1>

<h4>EditViewRoleModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <input readonly asp-for="RoleId" class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input  asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (Model.UserName.Any())
{
    <div class="card">

        <div class="card-header">

            Users in this List

        </div>

        <div class="card-body">


          @foreach(var User in Model.UserName)
          {
                <h3>@User</h3>

          }

        </div>


        <div class="card-footer">

            <a asp-action="" asp-controller="" class="btn btn-primary">

                Add or remove user from the list </a>
            

        </div>

    </div>

}


else 
{
<div class="alert alert-warning">
No userName in this List
</div>
}


<div>
    <a asp-action="Index">Back to List</a>
</div>

